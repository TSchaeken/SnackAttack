<div class='container-fluid'>
    <div class='row mt-5'>
        <div class="col-md-4 offset-md-2 ready-to-eat">
            <h1>Order up!</h1>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> individual-burgers/burger devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4 devoured-burgers">
            <h1>Conquered</h1>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> individual-burgers/burger devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <footer>
        <div class="col-md-6 offset-md-4 mt-5">
            <h2>The Customizer</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger">Burger name:</label>
                    <input type="text" id="burger" burger_name="burger_name">
                </div>

                <button type="submit">Add burger</button>
            </form>
        </div>
    </footer>
</div>